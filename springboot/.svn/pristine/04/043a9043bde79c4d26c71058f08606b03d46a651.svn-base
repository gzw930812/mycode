var prefix = ctx + "/bottle/steelBottles"
$(function() {
	load();
});

function load() {
	$('#exampleTable')
			.bootstrapTable(
					{
						method : 'get', // 服务器数据的请求方式 get or post
						url : prefix + "/list", // 服务器数据的加载地址
						// showRefresh : true,
						// showToggle : true,
						// showColumns : true,
						iconSize : 'outline',
						toolbar : '#exampleToolbar',
						striped : true, // 设置为true会有隔行变色效果
						dataType : "json", // 服务器返回的数据类型
						pagination : true, // 设置为true会在底部显示分页条
						// queryParamsType : "limit",
						// //设置为limit则会发送符合RESTFull格式的参数
						singleSelect : false, // 设置为true将禁止多选
						// contentType : "application/x-www-form-urlencoded",
						// //发送到服务器的数据编码类型
						pageSize : 10, // 如果设置了分页，每页数据条数
						pageNumber : 1, // 如果设置了分布，首页页码
						// search : true, // 是否显示搜索框
						rowStyle : function() {
							 var style = {};             
			                 style={css:{'cursor':'pointer'}};                
			                 return style;
						},
						showColumns : false, // 是否显示内容下拉框（选择显示的列）
						sidePagination : "server", // 设置在哪里进行分页，可选值为"client" 或者
													// "server"
						queryParams : function(params) {
							// 处理分页器当前页的问题（当前页都跑到几十了，明明没有那么多页）
							var pageSize = params.offset;
							pageSize = pageSize / 10;
							return {
								// 说明：传入后台的参数包括offset开始索引，limit步长，sort排序列，order：desc或者,以及所有列的键值对
								limit : params.limit,
								offset : Number(pageSize) + 1
							// name:$('#searchName').val(),
							// username:$('#searchName').val()
							};
						},
						columns : [
									{
										field : 'index',
										title : '序号',
										formatter : function(value, row, index) {
											var table = $('#exampleTable')
													.bootstrapTable('getOptions');
											var pageNumber = table.pageNumber;
											var pageSize = table.pageSize;
											return (Number(pageNumber) - 1)
													* pageSize + index + 1;
										}
									},
									{
										field : 'bottleNo',
										title : '气瓶编号'
									},
									{
										field : 'scrapReason',
										title : '报废原因'
									},
									{
										field : 'scrapReason',
										title : '报废方法'
									},
									{
										field : 'scrapReason',
										title : '报废日期'
									},
									{
										field : 'checkDate',
										title : '检验日期'
									},
									{
										field : 'nextCheckDate',
										title : '下次检验日期'
									},
									{
										field : 'bottleTypeName',
										title : '气瓶规格'
									},
									{
										field : 'bottleStandardName',
										title : '气瓶型号'
									},
									{
										field : 'deptName',
										title : '产权单位'
									},
									{
										field : 'steelSealCode',
										title : '充装钢印码号'
									},
									{
										field : 'produceDate',
										title : '制造日期'
									},
									{
										field : 'produceFactoryName',
										title : '气瓶生产厂家'
									},
									{
										field : 'qrcodeNo',
										title : '关联二维码'
									}],
						onClickRow : function(row, element, field) {
							audit(row.id);
						}
					});
}
function reLoad() {
	$('#exampleTable').bootstrapTable('refresh');
}
function audit(id) {
	layer.open({
		type : 2,
		title : '编辑',
		maxmin : true,
		shadeClose : false, // 点击遮罩关闭层
		area : [ '800px', '520px' ],
		content : prefix + '/audit/' + id // iframe的url
	});
}

