<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
							<input id="id" name="id" th:value="${stations.id}" type="hidden">
							<input type="hidden" name="type" value="1"><!-- 充装站标识 -->
							<div class="form-group">
								<label class="col-sm-3 control-label">站点名称：</label>
								<div class="col-sm-8">
									<input id="name" name="name" th:value="${stations.name}" class="form-control" type="text">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">社会统一信用代码：</label>
								<div class="col-sm-8">
									<input id="creditCode" name="creditCode" th:value="${stations.creditCode}" class="form-control"
										type="text">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">站点地址：</label>
								<div class="col-sm-8">
									<input id="address" name="address" th:value="${stations.address}"  class="form-control"
										type="text">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">所属机构：</label>
								<div class="col-sm-8">
									<input id="deptId" name="deptId" class="hidden" th:value="${deptId}"> <input
									id="deptName" name="deptName" class="form-control" type="text" th:value="${deptName}"
									style="cursor: pointer;" onclick="openDept()"
									readonly="readonly" placeholder="所属机构">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">负责人：</label>
								<div class="col-sm-8">
									<input id="chargePerson" name="chargePerson" th:value="${stations.chargePerson}" 
										class="form-control" type="text">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">联系电话：</label>
								<div class="col-sm-8">
									<input id="cellPhone" name="cellPhone" th:value="${stations.cellPhone}"  class="form-control"
										type="text">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">充装钢印号：</label>
								<div class="col-sm-8">
									<input id="steelSealCode" name="steelSealCode" th:value="${stations.steelSealCode}" 
										class="form-control" type="text">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">许可证号：</label>
								<div class="col-sm-8">
									<input id="licenceCode" name="licenceCode" th:value="${stations.licenceCode}"  class="form-control"
										type="text">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">许可证有效期：</label>
								<div class="col-sm-8">
									<input th:value="${#dates.format(stations.licenceExpireDate,'yyyy-MM-dd')}"  type="text" class="laydate-icon layer-date form-control" id="licenceExpireDate" name="licenceExpireDate" 
                                          onclick="laydate({istime: false, format: 'YYYY-MM-DD'})" style="background-color: #fff;" readonly="readonly"/>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">站点状态：</label>
								<div class="col-sm-8">
									<select id="status" name="status" th:field="${stations.status}" th:value="${stations.status}" class="form-control chosen-select" style="width: 100%">
										<option value="1" th:selected="${stations.status=='1'}">营业中</option>
										<option value="2" th:selected="${stations.status=='2'}">停业中</option>
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">充装许可证：</label>
								<div class="col-sm-8">
									<input id="picUrls" name="picUrls" th:value="${stations.picUrls}"  class="form-control" type="hidden">
									<img th:src="${defaultImg}" id="preview" alt="充装许可证" width="200px;" height="200px;">
									<button type="button" class="layui-btn" id="btn_upload_pic">
			                            <i class="fa fa-cloud"></i>选择文件
			                        </button>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div th:include="include::footer"></div>
	<script type="text/javascript"
		th:src="@{/js/appjs/stationinfo/stations/edit.js}">
		
	</script>
</body>
</html>
