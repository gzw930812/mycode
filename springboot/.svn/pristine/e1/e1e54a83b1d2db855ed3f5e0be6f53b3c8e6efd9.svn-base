html{
	height: 100%;
    font-family: PingFangSC-Light,'helvetica neue','hiragino sans gb',arial,'microsoft yahei ui','microsoft yahei',simsun,sans-serif;
    font-size: 14px;
}
body.signin {
	min-width:1200px;
    background: #18c8f6;
    height: auto;
    overflow:auto;
    background:url("../img/bg.jpg") no-repeat center fixed;
    -webkit-background-size: 100% 100%;
    -moz-background-size: 100% 100%;
    -o-background-size: 100% 100%;
    background-size: 100% 100%;
    font-family: "微软雅黑";
}
a{
	cursor:pointer;
}
.signinpanel{
	min-width:1200px;
	text-align:center;
	/* 
	position:absolute;
	left:50%;
	transform:translate(-50%,0%); */
}

.signinpanel .sysName {
	width:1195px;
	height:74px;
	background:url("../img/loginword.png") no-repeat ;
    -webkit-background-size: contain;
    -moz-background-size: contain;
    -o-background-size: contain;
    background-size: contain;
    margin:50px auto;
}

.contain{
	width:940px;
	height:530px;
	margin:0px auto;
}

.shadow_box{
	position:absolute;
	width:940px;
	height:530px;
	background-color:rgba(168,212,255,0.1);
	/* border:1px solid #bad4ff; */
	box-shadow: 0 0 10px rgba(59,59,59,0.18);
}
.content_box{
	width:940px;
	height:530px;
	padding:50px 100px;
	display:-webkit-flex;
	display:-moz-flex;
	display:-o-flex;
	display:flex;
	-webkit-justify-content: space-between;
	-moz-justify-content: space-between;
	-o-justify-content: space-between;
	justify-content: space-between;
}
.content_left,.content_right{
	width:350px;
	height:430px;
}	
.content_left .left_top{
	display:-webkit-flex;
	display:-moz-flex;
	display:-o-flex;
	display:flex;
	-webkit-justify-content: space-between;
	-moz-justify-content: space-between;
	-o-justify-content: space-between;
	justify-content: space-between;
	margin-top:50px;
	margin-bottom:30px;
	
}
.left_top>.gas_tureorfalse,.left_top>.gas_info{
	width:155px;
	height:130px;
	background-color:white;
	text-align:center;
	color:#4e8cee;
	font-size:16px;
	padding:10px;
	cursor: pointer;
}
.left_top>.gas_tureorfalse:hover{
	 opacity: 0.5;
}
.left_top>.gas_tureorfalse>a,.left_top>.gas_info>a{
	display:block;
}
.left_top .gas_tureorfalse:hover,.left_top .gas_info:hover{
	opacity:0.5;	
}
.left_top .gas_tureorfalse img,.left_top .gas_info img{
	margin-bottom:8px;
}

.left_bottom{
	width:350px;
	height:220px;
	background-color:white;
}
.left_bottom .notice_board_title{
	padding:5px 20px;
	color:#4e8cee;
	background-color:#e5f1ff;
	height:auto;
	overflow:hidden;
	line-height:30px;
	font-size:18px;
	border-top-left-radius:10px;
	border-top-right-radius:10px;
}
.left_bottom .notice_board_title .notice_board{
	float:left;
}
.left_bottom .notice_board_title .more{
	float:right;
}

.notice_board_item{
	line-height:30px;
	font-size:16px;
	padding-left:10px;
	padding-right:10px;
}
.notice_board_item .notice_board_info{
	width:210px;
	overflow-x: hidden;
	text-overflow: ellipsis;
	white-space:nowrap;
	float:left;
	color: black !important;
	
}
.notice_board_item .notice_board_time{
	float:right;
	color:#999999;
}




.content_right{
	position:relative;
}
.acount_login{
	position:absolute;
	top:0px;
	left:50%;
	margin-left:-50px;
	height:100px;
	width:100px;
	border-radius:100px;
	background-color:white;
	color:#4986e6;
	display:-webkit-flex;
	display:-moz-flex;
	display:-o-flex;
	display:flex;
	-webkit-justify-content:center;
	-moz-justify-content: center;
	-o-justify-content: center;
	justify-content: center;
	-webkit-align-items: center;
	-moz-align-items: center;
	-o-align-items: center;
	align-items: center;
	box-shadow:0 0 20px #b1b1b1;
	
}
.acount_login .title{
	font-size:25px;
	font-weight:bolder;
}
.title div{
	white-space: nowrap;
}

.login_box{
	margin-top:50px;
	width:350px;
	height:380px;
	background-color:white;
	padding-top:50px;
}
.account{
	border-bottom:1px solid #ddd;
	padding:20px;
	display:-webkit-flex;
	display:-moz-flex;
	display:-o-flex;
	display:flex;
	-webkit-align-items: center;
	-moz-align-items: center;
	-o-align-items: center;
	align-items: center;
	
}
.account .icon{
	width:36px;
	height:32px;
	display:inline-block;
	font-style: normal;
}
.account .icon_user{
	background:url("../img/account.png") no-repeat ;
    -webkit-background-size: contain;
    -moz-background-size: contain;
    -o-background-size: contain;
    background-size: contain;
}
.account .delete_text{
	width:18px;
	height:18px;
	
	display:inline-block;
	background:url("../img/del.png") no-repeat ;
    -webkit-background-size: 100% 100%;
    -moz-background-size: 100% 100%;
    -o-background-size: 100% 100%;
    background-size: 100% 100%;
    cursor: pointer;
    display:none;
}
.account .icon_key{
	background:url("../img/key.png") no-repeat ;
    -webkit-background-size: contain;
    -moz-background-size: contain;
    -o-background-size:contain;
    background-size: contain;
}
label.error {
    color: #4e8cee;
    margin-left: 5px;
    font-size: 23px;
    margin-bottom:0px;
}


.account input{
	width:100%;
	border-width:0px;
	height:30px;
	font-size:20px;
	outline: 0px;
	padding-left:10px;
	position:relative;
	color:#4e8cee;
}



.btn-login{
	width:250px;
	border: 1px solid #00a3ff;
	background-color: #00A3FF;
	color: #fff;
	font-size:20px;
	margin:80px auto;
	border-radius:20px;
}
.btn-login:hover{
	color: #fff;
    background-color: #0097ee;
    border: 1px solid #0097ee;
}
    background: none;
}

.signinpanel .signin-info ul {
    list-style: none;
    padding: 0;
    margin: 20px 0;
    font-size: 20px;
}

.b_radius{
	-webkit-border-radius:10px;
	-moz-border-radius:10px;
	-o-border-radius:10px;
	border-radius:10px;
}



@media screen and (max-width: 768px) {
    .signinpanel,
    .signuppanel {
        margin: 0 auto;
        width: 413px!important;
        padding: 20px;
    }
    .signinpanel form {
        margin-top: 20px;
    }
    .signup-footer {
        margin-bottom: 10px;
    }
    .signuppanel .form-control {
        margin-bottom: 10px;
    }
    .signup-footer .pull-left,
    .signup-footer .pull-right {
        float: none !important;
        text-align: center;
    }
    .signinpanel .signin-info ul {
        display: none;
    }
}
@media screen and (max-width: 320px) {
    .signinpanel,
    .signuppanel {
        margin:0 20px;
        width:auto;
    }
}
