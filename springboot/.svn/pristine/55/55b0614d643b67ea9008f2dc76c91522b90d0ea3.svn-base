$().ready(function() {
	validateRule();
});

$.validator.setDefaults({
	submitHandler : function() {
		update();
	}
});
function update() {
	$.ajax({
		cache : true,
		type : "POST",
		url : ctx+"/system/sysDept/update",
		data : $('#signupForm').serialize(),// 你的formid
		async : false,
		error : function(request) {
			parent.layer.alert("Connection error");
		},
		success : function(data) {
			if (data.code == 0) {
				parent.layer.msg("操作成功");
				parent.reLoad();
				var index = parent.layer.getFrameIndex(window.name); // 获取窗口索引
				parent.layer.close(index);

			} else {
				parent.layer.alert(data.msg)
			}

		}
	});

}
function validateRule() {
	var icon = "<i class='fa fa-times-circle'></i> ";
	$("#signupForm").validate({
		rules : {
			name : {
				required : true
			},
			areaName:{
				required : true
			},
			orderNum : {
				required : true,
				digits:true
			}
		},
		messages : {
			name : {
				required : icon + "请输入机构名称"
			},
			areaName:{
				required : icon + "请选择所属区域"
			},
			orderNum : {
				required : icon + "请输入排序",
				digits:	icon + "请输入整数"
			}
		}
	})
}
var openDept = function(){
	layer.open({
		type:2,
		title:"选择机构",
		area : [ '300px', '450px' ],
		content:ctx+"/system/sysDept/treeView"
	});
}
function loadDept(deptId,deptName){
	$("#parentId").val(deptId);
	$("#pName").val(deptName);
}

var openArea = function(){
	layer.open({
		type:2,
		title:"选择区域",
		area : [ '300px', '450px' ],
		content:ctx+"/basicInfo/area/treeView"
	});
};
function loadArea(areaId,areaName){
	$("#areaId").val(areaId);
	$("#areaName").val(areaName);
};