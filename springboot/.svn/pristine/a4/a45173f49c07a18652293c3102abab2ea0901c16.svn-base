html{
	height: 100%;
    font-family: PingFangSC-Light,'helvetica neue','hiragino sans gb',arial,'microsoft yahei ui','microsoft yahei',simsun,sans-serif;
    font-size: 14px;
}
body.signin {
	min-width:1200px;
    background: #18c8f6;
    height: auto;
    overflow:auto;
    background:url("../img/bg.jpg") no-repeat center fixed;
    -webkit-background-size: 100% 100%;
    -moz-background-size: 100% 100%;
    -o-background-size: 100% 100%;
    background-size: 100% 100%;
    font-family: "微软雅黑";
}
.uba{
	border:1px solid black;
}
a{
	cursor:pointer;
}
.signinpanel{
	min-width:1200px;
	text-align:center;
	/* 
	position:absolute;
	left:50%;
	transform:translate(-50%,0%); */
}

.signinpanel .sysName {
	width:1195px;
	height:74px;
	background:url("../img/loginword.png") no-repeat ;
    -webkit-background-size: contain;
    -moz-background-size: contain;
    -o-background-size: contain;
    background-size: contain;
    margin:80px auto;
}

.contain{
	width:940px;
	height:530px;
	margin:0px auto;
}

.shadow_box{
	position:absolute;
	width:940px;
	height:530px;
	background-color:rgba(168,212,255,0.1);
	box-shadow: 0 0 10px rgba(59,59,59,0.18);
	-webkit-border-radius:10px;
	-moz-border-radius:10px;
	-o-border-radius:10px;
	border-radius:10px;
}
.f_l{
	float:left;
}
.f_r{
	float:right;
}
.content_box{
	width:940px;
	height:530px;
	padding:50px 100px;
}

.content_left,.content_right{
	width:350px;
	height:430px;
}	
.content_left .left_top{
	margin-top:50px;
	margin-bottom:30px;
	height:auto;
	overflow:hidden; 
	
}
.content_left>.left_top>.gas_tureorfalse,.content_left>.left_top>.gas_info{
	width:155px;
	height:130px;
	background-color:white;
	text-align:center;
	color:#4e8cee;
	font-size:16px;
	padding:10px;
	cursor: pointer;
	-webkit-border-radius:5px;
	-moz-border-radius:5px;
	-o-border-radius:5px;
	border-radius:5px;
}
.left_top>.gas_tureorfalse>a,.left_top>.gas_info>a{
	display:block;
}
.gas_tureorfalse:hover,.gas_info:hover{
	opacity:0.5;	
}
.left_top .gas_tureorfalse img,.left_top .gas_info img{
	margin-bottom:8px;
}

.left_bottom{
	width:350px;
	height:220px;
	background-color:white;
	-webkit-border-radius:5px;
	-moz-border-radius:5px;
	-o-border-radius:5px;
	border-radius:5px;
}
.left_bottom .notice_board_title{
	padding:5px 20px;
	color:#4e8cee;
	background-color:#e5f1ff;
	height:auto;
	overflow:hidden;
	line-height:30px;
	font-size:16px;
	border-top-left-radius:5px;
	border-top-right-radius:5px;
}
.left_bottom .notice_board_title .notice_board{
	float:left;
}
.left_bottom .notice_board_title .more{
	float:right;
}

.notice_board_item{
	line-height:30px;
	font-size:16px;
	padding-left:10px;
	padding-right:10px;
}
.notice_board_item .notice_board_info{
	width:210px;
	overflow-x: hidden;
	text-overflow: ellipsis;
	white-space:nowrap;
	float:left;
	color: black !important;
	
}
.notice_board_item .notice_board_time{
	float:right;
	color:#999999;
}




.content_right{
	position:relative;
}
.acount_login{
	position:absolute;
	top:0px;
	left:50%;
	margin-left:-50px;
	height:100px;
	width:100px;
	border-radius:100px;
	background-color:white;
	color:#4986e6;
	padding-top:15px;
	box-shadow:0 0 20px #b1b1b1;
	
}
.acount_login .title{
	font-size:25px;
	font-weight:bolder;
}
.title div{
	white-space: nowrap;
}

.login_box{
	margin-top:50px;
	width:350px;
	height:380px;
	background-color:white;
	padding-top:50px;
	-webkit-border-radius:5px;
	-moz-border-radius:5px;
	-o-border-radius:5px;
	border-radius:5px;
}
.account{
	border-bottom:1px solid #ddd;
	padding:20px;
	height:auto;
	overflow:hidden;
	font-size:20px;
}
.account .icon{
	width:36px;
	height:32px;
	display:inline-block;
	font-style: normal;
	
}
.account .icon_user{
	background:url("../img/account.png") no-repeat ;
    -webkit-background-size: contain;
    -moz-background-size: contain;
    -o-background-size: contain;
    background-size: contain;
}
.account .delete_text{
	width:18px;
	height:18px;
	margin-top:6px;    
	background:url("../img/del.png") no-repeat ;
    -webkit-background-size: 100% 100%;
    -moz-background-size: 100% 100%;
    -o-background-size: 100% 100%;
    background-size: 100% 100%;
    cursor: pointer;
    display:none;
}
.account .icon_key{
	background:url("../img/key.png") no-repeat ;
    -webkit-background-size: contain;
    -moz-background-size: contain;
    -o-background-size:contain;
    background-size: contain;
}
label.error {
    color: #4e8cee;
    margin-left: 5px;
    font-size: 23px;
    margin-bottom:0px;
}


.account input{
	width:80%;
	border-width:0px;
	height:30px;
	outline: 0px;
	padding-left:10px;
	position:relative;
	color:#4e8cee;
}
.account input::-ms-clear { display: none;}
.account input::-ms-reveal { display: none;}


.btn-login{
	width:250px;
	border: 1px solid #00a3ff;
	background-color: #00A3FF;
	color: #fff;
	font-size:20px;
	margin:80px auto;
	border-radius:20px;
}
.btn-login:hover{
	color: #fff;
    background-color: #0097ee;
    border: 1px solid #0097ee;
}
    background: none;
}



.b_radius{
	-webkit-border-radius:10px;
	-moz-border-radius:10px;
	-o-border-radius:10px;
	border-radius:10px;
}



@media screen and (max-width: 1366px) {
	body.signin {
		min-width:1200px;
		min-height:auto;
    }
    .signinpanel{
		min-width:1200px;
	}
	.signinpanel .sysName {
		width:900px;
	    margin:60px auto;
	}
	.contain{
		width:800px;
		height:450px;
		margin:0px auto;
	}
	.shadow_box{
		width:800px;
		height:450px;
	}
	.content_box{
		width:800px; /* 700 */
		height:450px; /* 390 */
		padding:30px 50px;
	}
	.content_left,.content_right{
		width:325px;
		height:390px;
	}
	.content_left .left_top{
		margin-top:50px;
		margin-bottom:15px;
	}
	
	.content_left>.left_top>.gas_tureorfalse,.content_left>.left_top>.gas_info{
		width:130px;
		height:100px;
		font-size:14px;
		padding:10px;
	}
	.content_left>.left_top>.gas_tureorfalse>a>img,.content_left>.left_top>.gas_info>a>img{
		width:50px;
		height:50px;
	}
	
	.left_bottom{
		width:325px;
		height:224px;
		background-color:white;
	}
	.notice_board_item .notice_board_info{
		width:60%;
	}
	.left_bottom .notice_board_title{
		padding:3px 10px;
		line-height:30px;
		font-size:14px;
	}
	.notice_board_item{
		line-height:30px;
		font-size:14px;
		padding-left:10px;
		padding-right:10px;
	}
	.login_box{
		margin-top:50px;
		width:325px;
		height:340px;
		background-color:white;
		padding-top:50px;
	}
	.acount_login{
		margin-left:-45px;
		height:90px;
		width:90px;
		border-radius:90px;
		padding-top:10px;
	}
	.acount_login .title{
		font-size:20px;
	}
	.acount_login{
		padding-top:15px;
	}
	.account{
		border-bottom:1px solid #ddd;
		padding:15px;
		height:auto;
		overflow:hidden;
		font-size:16px;
	}
	.account .icon{
		width:32px;
		height:28px;
		display:inline-block;
		font-style: normal;
		
	}
	.account .delete_text{
		width:16px;
		height:16px;
		margin-top:7px;    
		display:none;
	}
	.btn-login{
		font-size:18px;
	}
}

