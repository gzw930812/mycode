<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head th:include="include :: header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="col-sm-12">
			<div class="ibox">
				<div class="ibox-body">
					<div class="fixed-table-toolbar">
						
						<div class="columns    col-md-2 ">
							<input id=outerNumber type="text" class="form-control"
								placeholder="设备编号">
						</div>
							<div class="columns   col-md-2 ">
							<select id="stationId"  class="form-control" >
								<option value="">==产权单位-全部==</option>
								<option th:each="station:${stations}" th:text="${station.name}" th:value="${station.id}"></option>
							</select>
						</div>
						<div class="columns  col-md-2 ">
							<select id="deviceName" class="form-control">
								<option value="">==设备名称-全部==</option>
								<option value="手持机">手持机</option>
								<option value="平板">平板</option>
							</select>
						</div>
						<div class="columns  col-md-2 ">
							<select id="deviceStatus" class="form-control">
								<option value="">==设备状态-全部==</option>
								<option value="1">正常</option>
								<option value="2">维修</option>
								<option value="3">报废</option>
							</select>
						</div>
						<div class="columns  col-md-2">
							<button class="btn btn-success" onclick="reLoad()">查询</button>
						</div>
					</div>
					<table id="exampleTable" data-mobile-responsive="true">
					</table>
				</div>
			</div>
		</div>
	</div>
	<!--shiro控制bootstraptable行内按钮看见性 来自bootdo的创新方案 -->
		
	<div th:include="include :: footer"></div>
	<script type="text/javascript" th:src="@{/js/appjs/stationinfo/deviceRepairs/deviceRepairsHistory.js}"></script>
</body>
</html>