var prefix = ctx + "/checkInfo/checkRecord"
$(function() {
	load();
});

function load() {
	$('#exampleTable').bootstrapTable({
		method : 'get', // 服务器数据的请求方式 get or post
		url : prefix + "/list", // 服务器数据的加载地址
		// showRefresh : true,
		// showToggle : true,
		// showColumns : true,
		iconSize : 'outline',
		toolbar : '#exampleToolbar',
		striped : true, // 设置为true会有隔行变色效果
		dataType : "json", // 服务器返回的数据类型
		pagination : true, // 设置为true会在底部显示分页条
		// queryParamsType : "limit",
		// //设置为limit则会发送符合RESTFull格式的参数
		singleSelect : false, // 设置为true将禁止多选
		// contentType : "application/x-www-form-urlencoded",
		// //发送到服务器的数据编码类型
		pageSize : 10, // 如果设置了分页，每页数据条数
		pageNumber : 1, // 如果设置了分布，首页页码
		// search : true, // 是否显示搜索框
		showColumns : false, // 是否显示内容下拉框（选择显示的列）
		sidePagination : "server", // 设置在哪里进行分页，可选值为"client" 或者 "server"
		queryParams : function(params) {
			// 处理分页器当前页的问题（当前页都跑到几十了，明明没有那么多页）
			var pageSize = params.offset;
			pageSize = pageSize / 10;
			return {
				// 说明：传入后台的参数包括offset开始索引，limit步长，sort排序列，order：desc或者,以及所有列的键值对
				limit : params.limit,
				offset : Number(pageSize) + 1,
				bottleNo : $("#searchBottleNo").val(),
				qrcodeNo : $("#searchQrcodeNo").val(),
				deptId : $("#searchDeptId").val(),
				checkDeptId : $("#searchCheckDeptId").val(),
				bottleTypeName : $("#searchBottleTypeName").val(),
				status : 2
			};
		},
		// //请求服务器数据时，你可以通过重写参数的方式添加一些额外的参数，例如 toolbar 中的参数 如果
		// queryParamsType = 'limit' ,返回参数必须包含
		// limit, offset, search, sort, order 否则, 需要包含:
		// pageSize, pageNumber, searchText, sortName,
		// sortOrder.
		// 返回false将会终止请求
		columns : [ {
			field : 'index',
			title : '序号',
			formatter : function(value, row, index) {
				var table = $('#exampleTable')
						.bootstrapTable('getOptions');
				var pageNumber = table.pageNumber;
				var pageSize = table.pageSize;
				return (Number(pageNumber) - 1)
						* pageSize + index + 1;
			}
		}, {
			field : 'reportNo',
			title : '报告编号',
			visible : false
		}, {
			field : 'bottleNo',
			title : '气瓶编号'
		}, {
			field : 'checkResult',
			title : '检验结论',
			formatter : function(value, row, index) {
				return row.checkResult == '1'?'合格':'报废'
			}
		}, {
			field : 'checkDate',
			title : '检验日期'
		}, {
			field : 'nextCheckDate',
			title : '下次检验日期'
		}, {
			field : 'checkDeptName',
			title : '定检单位'
		}, {
			field : 'bottleTypeName',
			title : '气瓶规格'
		}, {
			field : 'bottleStandardName',
			title : '气瓶型号'
		}, {
			field : 'deptName',
			title : '产权单位'
		}, {
			field : 'deptId',
			title : '充装站id',
			visible : false
		}, {
			field : 'steelSealCode',
			title : '充装钢印码号'
		}, {
			field : 'produceDate',
			title : '制造日期'
		}, {
			field : 'produceFactoryName',
			title : '气瓶生产厂家'
		}, {
			field : 'qrcodeNo',
			title : '关联二维码'
		}, {
			field : 'areaId',
			title : '所属区域id',
			visible : false
		}, {
			field : 'areaName',
			title : '所属区域名称',
			visible : false
		}, {
			field : 'workerId',
			title : '作业人员id',
			visible : false
		}, {
			field : 'workerName',
			title : '作业人员名字',
			visible : false
		}, {
			field : 'checkDeptId',
			title : '检验站id',
			visible : false
		}, {
			field : 'bottleTypeId',
			title : '钢瓶规格id(对应字典表中的钢瓶类型value)',
			visible : false
		}, {
			field : 'bottleStandardId',
			title : '钢瓶型号id',
			visible : false
		}, {
			field : 'produceFactoryId',
			title : '生产厂家id',
			visible : false
		}, {
			field : 'status',
			title : '检验状态(1：待检；2：检验完成)',
			visible : false
		} ]
	});
}
function reLoad() {
	$('#exampleTable').bootstrapTable('refresh');
}
